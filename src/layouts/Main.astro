---
import Base from './Base.astro';
import Meta from './Meta.astro';
import Title from './Title.astro';

import '../app.css';

interface Props {
  title: string;
  lang: string;
  description: string;
}

const { title, description, lang = 'en' } = Astro.props;
---

<Base lang={lang}>
  <Meta slot='meta' title={title} description={description} />
  <Title slot='title' title={title} />
  <slot />
</Base>
